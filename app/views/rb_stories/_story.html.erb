<li class="model story <%= mark_if_closed(story) %>" id="<%= story_html_id_or_empty(story) %>">
  <% $tooltip = "
    <b>Subject</b>: #{story.subject}<br />
    <b>Tracker</b>: #{story.tracker}<br />
    <b>Status</b>: #{status_label_or_default(story)}<br />
    <b>Story points</b>: #{story_points_or_empty(story)}<br />
    <b>Estimation (hours)</b>: #{story.estimated_hours}<br />
    <b>Spent time</b>: #{story.spent_hours}<br />
    <b>Remaining hours</b>: #{story.remaining_hours}
    <p><b>Description</b><br />#{story.description}</p>"
  %>
  <div class="id story_tooltip story_field" title="<%= $tooltip.gsub("\"", "&quot;") %> ">
    <div class="t"><%= issue_link_or_empty(story) %></div>
    <div class="v"><%= id_or_empty(story) %></div>
  </div>
  <div class="tracker_id editable story_field" fieldtype="select" fieldname="tracker_id">
    <div class="t"><%= tracker_name_or_empty(story) %></div>
    <div class="v"><%= tracker_id_or_empty(story) %></div>
  </div>
  <div class="subject editable story_field" fieldname="subject" fieldtype="textarea"><%=h story.subject %></div>
  <div class="status_id editable story_field" fieldtype="select" fieldname="status_id">
    <div class="t"><%= status_label_or_default(story) %></div>
    <div class="v"><%= status_id_or_default(story) %></div>
  </div>
  <div class="story_points editable story_field" fieldname="story_points"><%= story_points_or_empty(story) %></div>
  <div class="fixed_version_id story_field"><%= story.fixed_version_id %></div>
  <div class="higher_item_id story_field"><%= story.higher_item.blank? ? '' : story.higher_item.id %></div>
  <div class="meta">
    <%= render :partial => "shared/model_errors", :object => story.errors %>
  </div>
  <div class="clearfix"></div>
</li>
